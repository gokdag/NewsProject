@model NewsProject.data.concrete.ReportRepository;
@{
    Layout = "_Layout";
}
<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="m-4">
        <table class="table table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Category</th>
                    <th>Date Time</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>

            @foreach (var data in Model.GetAllWithCategory())
            {
                <tr>
                    <td>
                        <p>@data.Id</p></td>
                    <td style="min-width: 150px;">@data.Title</td>
                    <td>@data.Content</td>
                    <td>@data.Category.CategoryName</td>
                    <td style=" min-width: 106px;">@data.DateTime.ToString("dd MM yyyy")</td>
                    <td><a href="/Admin/Home/DeleteReport/@data.Id" class="btn btn-danger">SİL</a></td>
                    <td><a href="/Admin/Home/Update/@data.Id">Güncelle</a></td>
                </tr>

            }
        </table>
    </div>
</body>

